<div id="page_title">BLOG - <%= @post.title.upcase %></div>
  <a id="small_trial_link" href="<%=sign_up_path %>">  
    <t class="small_trial_link_text">Try Specright free</t>
  </a>

<div id="line"></div>

<div id="blog_information">Published <%= @post.created_at.strftime("%A %e %B %Y") %>. <%= @post.comments.count %> Comments</div>

<div id="about_box_small">
  <div id="blog_text"><%= @post.text.html_safe %></div>

  <div id="blog_line"></div>

    
  <div id="comments">
  <% if !@post.comments.blank? %>
      <div id="comments_title">Comments:</div>
    <% @post.comments.each do |comment| %>
      <div id="comments_text"><%= comment.text %></div>
      <div id="comment_author"><%= comment.author %>, <%= comment.created_at.strftime("%A %e %B %Y")%></div>
    <% end %>
  <% end %>   
  <div>
     
  <div id="blog_line"></div>

  <div id="comment_form">
    <div id="comments_title">Add comment:</div>
  <%= form_for [@post, @comment] do |f|%>

    <%= f.hidden_field :post_id, :value => @post.id %>
      <p>
        <label class="comment_form_text">Name:</label> 
        <%= f.text_field :author %>
      </p>
      <p>
        <label class="comment_form_text">Email:</label> 
        <%= f.text_field :email %> <i>(your email address will not be displayed)</i>
      </p>
      <p >
        <label class="comment_form_text">Comment:</label> 
        <%= f.text_area :text, :rows  => 1, :cols => 75  %>
      </p>

  <%= f.submit %>

  <% end %>
  </div>  
</div>
</div>
</div>



<div id="blog_index">
  <div id="blog_index_title">Browse topics</div>
  <div id="blog_index_line"></div>
  <div id="blog_index_options">
  <ul>
      <li><%= link_to "All", {:controller => "posts", :action => "index"}, :class => check_current_topic('all') %></li>
    <% @topics.each do |topic| %>
      <li><%= link_to topic, {:controller => "posts", :action => "index", :topic => topic}, :class => check_current_topic(topic) %></li>
    <% end %>
    </ul>
  </div>
</div>

