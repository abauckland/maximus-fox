<div class="web_blog_index">
	<div class="blog_index_title">Browse topics</div>
	<div class="blog_index_options">
		<ul>
			<li><%= link_to "All", {:controller => "posts", :action => "index"}, :class => check_current_topic('all') %></li>
			<% @topics.each do |topic| %>
				<li><%= link_to topic, {:controller => "posts", :action => "index", :topic => topic}, :class => check_current_topic(topic) %></li>
			<% end %>
		</ul>
	</div>	
</div>