<div id="header">
  <div id="logo_logged_in">
      <%= image_tag "specright_logo.png", :width => 100, :height=> 30, :border=>0%> 
  </div>
  <div id="menu">
    <div id="menu_item_project"><%= link_to "PROJECT", edit_project_path(@current_project.id), :class => check_current('projects', 'project')%></div>
    <div id="menu_item_project"><%= link_to "DOCUMENT", project_path(@current_project.id), :class => check_current('projects', 'document')%></div>
    <div id="menu_item_project"><%= link_to "REVISIONS", revision_path(@current_project.id), :class => check_current('revisions', 'revision')%></div>
    <div id="menu_item_project"><%= link_to "PUBLISH", print_path(@current_project.id), :class => check_current('prints', 'publish')%></div>
  </div>

  <div id="user_name"><%= current_user.first_name.capitalize %> <%= current_user.surname.capitalize %></div> 
  <div id="user_logout"><%= link_to "log out", log_out_path, :class => "logout"%></div> 
</div>

  <div id="user_menu">
    <ul>
      <li><%= link_to "Tutorials", help_path(@current_project.id) %></li>
      <li><%= link_to "My Details", edit_user_details_user_path(@current_project.id)%></li>
      <% if current_user.role != 'user'%>
        <li><%= link_to "Company Details", edit_company_path(@current_project.id)%></li>
        <li><%= link_to "User Licences", edit_user_path(@current_project.id)%></li>    
      <% end %>
    </ul>
  </div>

<%= yield %>





</body>

</html>