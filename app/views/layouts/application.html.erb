<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <meta name="google-site-verification" content="cop_cwN1MoCJd6HTFIZ18oRjhp4JmxbCt3_JQ2StDN0" />
  <title></title>
    <%= stylesheet_link_tag  'application-main' %>   
    <%= javascript_include_tag 'application' %>
    
    <%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
  </head>

<body>
<div id="page">             
  <div id="header_web">
    <div id="logo">
      <%= link_to image_tag("specright_logo.png", :width => 100, :height=> 30, :border=>0), home_path%>
    </div>
    <div id="menu">
      <div id="menu_item"><%= link_to "FEATURES", features_path, :class => check_current('features', 'features')%></div>
<!--       <div id="menu_item"><%= link_to "PRICING", prices_path, :class => check_current('prices', 'prices')%></div> -->
      <div id="menu_item"><%= link_to "FAQ", faqs_path, :class => check_current('faqs', 'faqs')%></div>
      <div id="menu_item"><%= link_to "BLOG", posts_path, :class => check_current('posts', 'posts')%></div>
 </div>
  
  <% if flash[:notice] %>
  	<div id="password_reminder">  
    	<%= link_to 'Forgotten Password?', new_password_reset_path %>  
  	</div>
  <% end %> 
   
    <%= form_tag sessions_path do %>
    <div id="login">       
          <%= text_field_tag :email, params[:email], :id=>"login_email", :placeholder => "Email address", :size => 25 %>  
          <%= password_field_tag :password, params[:password], :id=>"password", :placeholder => "Password", :size => 12 %>  
     </div>               
     <div id="login_submit">
        <%= submit_tag :login, :class => "login_submit"%> 
     </div> 
    <% end %>  
     
  </div>



<%= yield %>

<% if params[:controller] != 'posts' %>

  <div id="foot_bar">
      <div id="foot_item"><%= link_to "About Us", about_us_path, :class => check_current('abouts', 'abouts')%></div>
      <div id="foot_item"><%= link_to "Terms of Use", terms_path, :class => check_current('terms', 'terms')%></div>
      <div id="foot_item"><%= mail_to "info@specright.co.uk", "Contact Us", :subject => "Web Enquiry" %></div>
      
      <div id="foot_links"><%= link_to image_tag("twitter.png", :width=> 20, :height=>20, :border=> 0), "https://twitter.com/#!/specright"%></div>
  </div>
<% end %>
  
</div>
</body>
</html>
