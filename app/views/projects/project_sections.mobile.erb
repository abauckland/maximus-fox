    <!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">      <html>        <head>      <%= stylesheet_link_tag 'specright-ff' if !mobile_device?  %>      <%= stylesheet_link_tag 'specright-mobile' if mobile_device? %>         <%= javascript_include_tag   'jquery', 'rails.js', 'jquery.idTabs.min', 'autocomplete-rails.js', 'application' if !mobile_device?  %>      <%= javascript_include_tag   'jquery', 'rails.js', 'mobile' if mobile_device? %>    </head>        <body>   <div class="current">      <div id="toolbar">      <%= link_to "Back", projects_path, :class => "back", :rel => "external" %>      <h1><%= @current_project.code %> rev <%= @current_revision_rev %></h1>      </div>        <% unless flash.empty? %>        <div class="info">        <%- flash.each do |name, msg| -%>          <%= content_tag :div, msg, :id => "flash_#{name}" %>        <%- end -%>        </div>      <% end %>    <%if @project_sections.blank?%>  <ul>    <li class="arrow_blank">This document does not have any contents</li>      </ul><% else %>     <ul>  <%@project_sections.each do |section| %>  <li class="arrow"><%= link_to "#{section.ref} #{section.text}", {:controller => "projects", :action => "project_subsections", :id => @current_project.id, :section => section.id}%></li>      <% end %>  </ul><% end %>        </div>     </body>  </html> 