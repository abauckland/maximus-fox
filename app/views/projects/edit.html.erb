<div id="project_info">    Edit project details for:    <div id="project_update_confirm" class="flash_action_confirm">Project details have been updated</div></div><div id="option_band">  <div id="option_select_1">Project    <div id="project_select">                                       <%= select_tag "project", options_from_collection_for_select(@projects, :id, :project_code_and_title, @project.id), {:class => 'project_select', :onchange => "window.location='/projects/'+this.value;"} %>    </div>  </div>  <div id="new_project_button">      <%= link_to "create new project", new_project_path %>                                                        </div> </div><% if @project.errors.any? %>      <div id="project_create_error">      <%= pluralize(@project.errors.count, "error") %> prohibited this project from being edited   </div>  <% end %>   <%= form_for @project, :url => change_project_path(), :html => { :multipart => true } do |f| %><div id="edit_box_full">    <div id="prj_details">      <p>        <label>Project Code:*</label>        <%= f.text_field :code, {:size =>10, :onchange => "this.form.submit();"} %>        <%= error_check(@project, :code)%>       </p>            <p>        <label>Project Title:*</label>        <%= f.text_field :title, {:size =>53, :onchange => "this.form.submit();"}  %>        <%= error_check(@project, :title)%>       </p>  </div>    <div id="prj_details">       <p>        It is recommended that the Project status is kept as 'Draft' until the document has been fully scoped. Once the project status has been changed from 'Draft' it cannot be changed back.</td>      </p>      <p>        <label>Project Status:</label>        <%= f.select :project_status, options_for_select(@available_status_array, @project.project_status), {}, {:onchange => "this.form.submit();"} %>      </p>      <p>        <label>Revision Method:</label>        <%= @project.rev_method.capitalize %>      </p>  </div>  <!--move above array into variable so that it can be used elsewhere -->  <div id="prj_details">      <p>      <label>Project Template:</label>      <%= f.select :parent_id, options_for_select(@project_templates.collect {|p| [ p.project_code_and_title, p.id ]}, @current_project_template.id), {}, {:onchange => "this.form.submit();"}%>    </p>     </div>    <div id="prj_details">      <p>        <label>Project Client:</label>        <%= f.text_field :client, {:size =>53, :onchange => "this.form.submit();"}  %>      </p>      <p>        <label><%= f.label :photo, "Project Image:" %></label>        <%= show_image(@project)%>      </p>      <p>        <label>Change Image</br>(1Mb max):</label>        <%= f.file_field :photo, {:onchange => "this.form.submit();"}  %>      </p>   </div>  </div> <% end %>