<div class="mob_content">
	
	<div class="mob_home_image"></div>
	
	<div class="mob_strapline">
		great designs deserve great specifications	
	</div>
	
	<div class="mob_web_login">
		<%= form_tag sessions_path do %>
			<div id="web_mob_login_username">       
				<%= text_field_tag :email, params[:email], :id=>"login_email", :placeholder => "Email address"%> 
			</div> 	
			<div id="web_mob_login_password">	 
				<%= password_field_tag :password, params[:password], :id=>"password", :placeholder => "Password"%>  
			</div>               
			<div id="web_mob_login_submit">
				<%= submit_tag :login %> 
			</div> 
		<% end %>
	</div>

	<% if flash[:notice] %>
		<div class="mob_web_password_reminder">  
			<%= link_to 'Forgotten?', new_password_reset_path %>  
		</div>
	<% end %>
</div>