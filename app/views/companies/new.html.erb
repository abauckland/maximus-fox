<div id="page_title_2">CREATE ACCOUNT</div>

<div id="line"></div>

  <% if @company.errors.any? %>  
  <div id="sign_up_error">  
    <%= pluralize(@company.errors.count, "error") %> prohibited this account from being created 
  </div>  
  <% end %> 

<div id="about_box_less">
  
<%= form_for @company do |f| %>

<%= f.fields_for :users do |builder| %>
      <%= builder.hidden_field(:role, {:value => 'admin'})%>   

      <p>
      <label>First Name*:</label> 
      <%= builder.text_field :first_name, :size => 20  %>
      </p>
      
      <p>
      <label>Surname*:</label>  
      <%= builder.text_field :surname, :size => 20  %>
      </p>
      
      <p>
      <label>Email Address*:</label> 
      <%= builder.text_field :email, :size => 40 %><%= error_check(@company, :'users.email')%>          
      </p>
      
      <p>
      <label>Password*:</label> 
      <%= builder.password_field :password, :size => 20  %> (min 8 characters long)<%= error_check(@company, :'users.password')%>       
      </p>
      
      <p>
      <label>Confirm Password*:</label>   
      <%= builder.password_field :password_confirmation, :size => 20  %><%= error_check(@company, :'users.password')%>       
      </p>
      
<% end %>

      <p>
      <label>Company Name*:</label> 
      <%= f.text_field :company_name, :size => 40 %><%= error_check(@company, :company_name)%>      
      </p>
      
      <p>
      <label>Registered Name:</label> 
      <%= f.text_field :reg_name, :size => 40 %>
      </p>
      
      <p>
      <label>Company Number:</label> 
      <%= f.text_field :reg_number, :size => 20 %>
      </p>
      
      <p>
      <label>Registered Address:</label> 
  <%= f.text_field :reg_address, :size => 40 %>
      </p>
      
      <p>
      <label>Registered Location:</label> 
  <%= f.text_field :reg_location, :size => 40 %>
      </p>
      
      <p>
      <label>Telephone No*:</label> 
      <%= f.text_field :tel, :size => 20 %><%= error_check(@company, :tel)%>      
      </p>
      
      <p>
      <label>Website Address:</label> 
      <%= f.text_field :www, :size => 40 %>
      </p>
      
      <p>
      <label><%= f.label :photo, "Company Logo:" %></br>(1Mb max):</label> 
      <%= f.file_field :photo %>  (the image will be scaled proportionally to maximum 9mm high x 90mm wide)
      </p>
  
      <p id="accept_terms">
      <label >Accept Terms of Use*</label>  
      <%= f.check_box :read_term %><%= error_check(@company, :read_term)%>      
      </p>

</div>

<div id="bottom_button_2"><%= f.submit "Create Free Account"%></div>
  
<% end %>